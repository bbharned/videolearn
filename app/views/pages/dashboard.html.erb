<h1 class="page-header">Welcome <%= @current_user.firstname %>!</h1>

<div class="row">
<div class="col-md-7">
<div class="well" style="position: relative;">
	<div class="row">
		<div class="col-md-12">
			<%= link_to "edit profile", edit_user_path(@current_user), class: "edit-link" %>
			<h4><%= "#{@current_user.firstname} #{@current_user.lastname}" %></h4>
			<h5><%= "#{@current_user.company}" %></h5>
			<h5><%= "#{@current_user.email}" %></h5>
			<hr/>
			<h5 style="color:#777777;">Badges Earned</h5>
			<div class="dash-badges">
				<div class="d-badge" id="productivity-badge"><%= image_tag("badge-productivity.png") %></div>
				<div class="d-badge" id="visualization-badge"><%= image_tag("badge-visualization.png") %></div>
				<div class="d-badge" id="security-badge"><%= image_tag("badge-security.png") %></div>
				<div class="d-badge" id="mobility-badge"><%= image_tag("badge-mobility.png") %></div>
			</div>
		</div>
	</div>
</div>	
</div>
<div class="col-md-5">
	<div class="intro-video">
	<iframe src="https://www.youtube.com/embed/dCopRQ-6hTI" frameborder="0" allowfullscreen></iframe>
	</div>
</div>
</div>
<br /><br />
<div class="row icons">
	<div class="col-xs-3">
		<%= image_tag("icon-productivity.png") %> <span class="goAway">-</span> <span class="appear"><br /></span>Productivity
	</div>
	<div class="col-xs-3">
		<%= image_tag("icon-visualization.png") %> <span class="goAway">-</span> <span class="appear"><br /></span> Visualization
	</div>
	<div class="col-xs-3">
		<%= image_tag("icon-security.png") %> <span class="goAway">-</span> <span class="appear"><br /></span> Security
	</div>
	<div class="col-xs-3">
		<%= image_tag("icon-mobility.png") %> <span class="goAway">-</span> <span class="appear"><br /></span> Mobility
	</div>
</div>
<table width="100%" style="margin-top: 4px;">
	
</table>