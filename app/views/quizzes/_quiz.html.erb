<%= render 'shared/errors', obj: @quiz %>
<%= form_for(@quiz, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group" style="max-width: 96%; margin: auto;">
                <div class="row">
                <div class="col-sm-3 col-sm-offset-3">
                    <%= f.label :quiz %>
                </div>
                </div>
                <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Quiz Name", autofocus: true %>
                </div>
                </div>
            </div>
            <br />
            
           <div class="form-group" style="max-width: 96%; margin: auto;">
             <div class="row">
                <div class="col-sm-3 col-sm-offset-3">
                    <%= f.label "Current Quiz Questions" %>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                   <% if @questions != nil %>
                        <%= f.collection_check_boxes :question_ids, @questions.all, :id, :name do |cb| %>
                            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                        <% end %>
                    <% end %>
                </div>
            </div>
           </div>
           <br /><br />
           <div class="form-group" style="max-width: 96%; margin: auto;">
             <div class="row">
                <div class="col-sm-3 col-sm-offset-3">
                    <%= f.label "Available Quiz Questions" %>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <%= f.collection_check_boxes :question_ids, @availableq.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
           </div>

        <br /><br /><br />
        	<div class="row">
	            <div class="col-sm-2 col-sm-offset-5" style="text-align: center; padding-left: 0;">
	                <%= f.submit class: "btn btn-primary btn-lg" %>
	            </div>
            </div>
    <% end %>
    


<br /><br />
<div class="row" align="center">
<%= link_to "[ Cancel & Return to All Quizzes ]", quizzes_path %>
</div>