<%= render 'shared/errors', obj: @ecat %>

<%= form_for(@ecat, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="row">
    <div class="form-group">
        <div class="control-label col-sm-1">
            <%= f.label :name %>
        </div>
        <div class="col-sm-5">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter Event Category Name", autofocus: true %>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        <%= f.submit(@ecat.new_record? ? "Create Category" : "Update Category", class: "btn btn-primary btn-lg")%>
    </div>
</div>    
<% end %>
<br /><br />
<div class="row">
<div class="col-sm-4 col-sm-offset-2">
[<%= link_to "Cancel and Return to Event Categories", eventcats_path %>]
</div>
</div>