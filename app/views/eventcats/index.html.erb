<h1 class="page-header">Event Categories</h1>
<% if logged_in? && current_user.admin? %>
    <%= link_to "New Event Category", new_eventcat_path, class: "btn btn-default new-venue-button" %>
<% end %>
<% @ecats.each do |category| %>
<div align="center">
	<ul class="ecategory-listing">
        <div class="row">
            <div class="well well-sm col-md-4 col-md-offset-4">
                <li class="ecategory-title"><%= link_to "#{category.name}", eventcat_path(category) %></li>
                <li><small><%= pluralize(category.events.count, "event") %></small></li>
                <% if logged_in? && current_user.admin? %>
                    <li style="margin-top:15px;"><span class="badge"><%= link_to "Edit Category Name", edit_eventcat_path(category) %></span></li>
                <% end %>
            </div>
        </div>
    </ul>
</div>
<% end %>