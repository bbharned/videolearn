<h1 class="page-header">Scheduled <%= @ecat.name %>&nbsp;&nbsp;
<% if logged_in? && current_user.admin? %>
<span class="badge"><%= link_to "Edit Category Name", edit_eventcat_path(@ecat) %></span>
<% end %>
</h1>
<%= render 'nav' %>
<br />
<% @ecat_events.each do |event| %>
<div class="well row">
<div class="row">
	<div class="col-md-10"><h4><%= link_to "#{event.name}", event_path(event) %></h4></div>
	<div class="col-md-2">
		<% if event.cost == 0 %>
			<p>Complimentary Event</p>
		<% else %>
			<p>Cost: $<%= event.cost %></p>
		<% end %>
	</div>
</div>
<hr />
<div class="row">
	<div class="col-md-12"><p>Date/Time: <span style="font-weight:bold;"><%= event.time.to_s(:time_display) %></span>
	<br />Event Capacity: <%= event.capacity %>&nbsp;&nbsp;|&nbsp;&nbsp;Currently registered: 2</p></div>
</div>
<div class="row">
	<div class="col-md-2"><%= link_to "Register Now", root_path, class: "btn btn-primary" %></div>
</div>
<hr />
<div class="row">
<div class="col-md-12">
	<% if event.eventcats.any? %>
		<% event.eventcats.each do |category| %>
			<div class="badge"><%= category.name %></div>
		<% end %>
	<% end %>
</div>
</div>
</div>
<% end %>
