<h1 class="page-header">Registered Users</h1>
<div align="center"><%= will_paginate %></div>
<% @users.each do |user| %>
    
    <div class="well well-sm" style="margin-bottom:5px;">
    <div class="row">
    <div class="col-sm-2"><%= link_to "#{user.firstname } #{user.lastname}", user_path(user) %></div>
    <div class="col-sm-3"><%= user.company %></div>
    <div class="col-sm-5">Last Login: &nbsp;&nbsp;<span style="font-weight:bold;"><%= user.lastlogin.strftime("%b %d, %Y") if user.lastlogin %></span></div>
    <% if logged_in? && (current_user == user || current_user.admin?)%>
    <div class="col-sm-1"><%= link_to "Edit", edit_user_path(user) %></div>
	    <% if logged_in? && current_user.admin? %>
	    	<div class="col-sm-1"><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, style: "color:red;" %></div>
	    <% end %>
    <% end %>
    </div>
    </div>

<% end %> 
<div align="center"><%= will_paginate %></div>