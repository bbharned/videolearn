<%= render 'shared/errors', obj: @user %>
<div class="row">
    <div class="col-sm-8">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group">
                <div class="col-sm-5">
                    <%= f.text_field :firstname, class: "form-control", placeholder: "Enter First Name" %>
                </div>
                <div class="col-sm-5">
                    <%= f.text_field :lastname, class: "form-control",  placeholder: "Enter Last Name" %>
                </div>
            </div>
       

            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.email_field :email, class: "form-control",  placeholder: "Enter Email Address" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.email_field :email, class: "form-control",  placeholder: "Re-enter Email Address" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.text_field :company, class: "form-control",  placeholder: "Enter Company Name" %>
                </div>
            </div>
        
            
             <div class="form-group">
                <div class="col-sm-5">
                    <%= f.password_field :password, class: "form-control",  placeholder: "Enter Password" %>
                </div>
            
                
                <div class="col-sm-5">
                    <%= f.password_field :password_conf, class: "form-control",  placeholder: "Re-Enter Password" %>
                </div>
            </div>
        
        <br />
        
            <div class="col-sm-2">
                <%= f.submit(@user.new_record? ? "Create Account" : "Update Profile", class: "btn btn-primary btn-lg") %>
            </div>
    </div>
</div>
    <% end %>