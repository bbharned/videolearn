<h1 class="page-header">All Lesson Categories</h1>
<%= link_to "Add New Category", new_category_path, class: "btn btn-primary new-vid-button" %>
<br />
<% @categories.each do |category| %>
<ul class="listing">
	<div class="row">
		<div class="well col-md-4 col-md-offset-4">
			<li class="category-listing">
				<h4><%= link_to "#{category.name}", category_path(category) %></h4>
			</li>
		</div>
	</div>
</ul>
<% end %>