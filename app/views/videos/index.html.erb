
<h1 class="page-header">Training Videos</h1>
<%= link_to "Add New Video", new_video_path, class: "btn btn-primary new-vid-button" %>


<% @videos.each do |video| %>
	<div class="well well-sm">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-4"><%= link_to "#{video.name}", video_path(video) %></div>
				<div class="col-md-5"><%= video.url %></div>
				<div class="col-md-2"><%= link_to "Edit Video Info", edit_video_path(video) %></div>
				<div class="col-md-1"><%= link_to "Delete", video_path(video), method: :delete, data: {confirm: "Are you sure you want to delete this video?"}, style: "color:red;" %></div>
			</div>
		</div>
	</div>
<% end %>  