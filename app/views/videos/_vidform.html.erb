<%= render 'shared/errors', obj: @video %>
<div class="row">
    <div class="col-sm-12">
    <%= form_for(@video, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.label "Video Name" %>
                </div>
                <div class="col-sm-12">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Video Name", autofocus: true %>
                </div>
            </div>
       

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.label "Video URL" %>
                </div>
                <div class="col-sm-12">
                    <%= f.text_field :url, class: "form-control", placeholder: "Enter Embed URL" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.label "Video Categories" %>
                </div>
                <div class="col-sm-12">
                    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
            
        <br />
        
            <div class="col-sm-2" style="padding-left: 0px; margin-left: 0px;">
                <%= f.submit(@video.new_record? ? "Create Video" : "Update Video", class: "btn btn-primary btn-lg") %>
            </div>
    <% end %>
    </div>
</div>
<br /><br />
<div class="row" align="center">
<%= link_to "[ Cancel & Return to All Videos ]", videos_path %>
</div>